<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBA14F">
<CalendarView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/SE_CAL_events">

</CalendarView>

    <ImageView
        android:id="@+id/SE_ic_event"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:outlineSpotShadowColor="@color/cardview_dark_background"
        android:src="@drawable/ic_event" />

    <TextView
        android:id="@+id/SE_TXT_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SE_CAL_events"
        android:textColor="#0000FF"
        android:textSize="35dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>